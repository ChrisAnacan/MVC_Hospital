@model Hospital_MVC.Models.NursesTable
@{
    ViewData["Title"] = "Nurse Edit";
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
}

<body style="background-image: url(https://cutewallpaper.org/21/1920-x-1080-gif/Animated-GIFs-Animation-on-Behance.gif); background-repeat: no-repeat; background-size: cover; ">

    <h1>Edit</h1>
    <form method="post" asp-action="Nurses_Edit">
        <div class="border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <h2 class="text-info pl-3">Edit Category</h2>
            </div>
            <div class="row">
                <div class="col-sm-8">
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label asp-for="Name">Name on File</label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label asp-for="Department"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Department" class="form-control" />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label asp-for="Floor"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Floor" class="form-control" />
                            <span asp-validation-for="Floor" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-8 offset-4 row">

                            <div class="col">
                                <input type="submit" class="btn btn-outline-danger w-100" value="Update" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-outline-secondary w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @*  *@
                </div>
            </div>
        </div>

    </form>
</body>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}