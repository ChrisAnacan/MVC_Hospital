@model IEnumerable<Hospital_MVC.Models.ApplicantsTable>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pt-4">
    <div class="col-6">
        <h1 class="text-primary"> List of All Applicants </h1>
    </div>
</div>
<br />

@if (Model.Count() != 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Applicant ID
                    </th>
                    <th>
                        Applicant Name
                    </th>
                    <th>
                        Desired Department
                    </th>
                    <th>
                        Desired Floor
                    </th>
                    <th>
                        SSN
                    </th>
                    <th></th>
                    <th>Hire</th>
                    <th>View Details</th>
                    <th>Turn Down</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Applicant_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Floor)
                    </td>
                    <td>
                        @Html.Raw("\u2022\u2022\u2022\u2022\u2022")
                    </td>
                    <td>
                    <td class="text-center">
                        <a asp-action="Hire" class="btn btn-primary" asp-route-id="@item.ID">Hire</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Details" class="btn btn-dark" asp-route-ticketId="@item.ID"> View Details</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Deny" class="btn btn-warning" asp-route-id="@item.ID">Deny</a>
                    </td>
                </tr>
                }


            </tbody>
        </table>
    </div>
}
@if (Model.Count() == 0)
{
    <tr>No data to display</tr>

}