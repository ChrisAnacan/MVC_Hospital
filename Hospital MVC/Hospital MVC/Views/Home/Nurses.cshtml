@model List<NursesTable>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body style="background-image: url(https://cutewallpaper.org/21/1920-x-1080-gif/Animated-GIFs-Animation-on-Behance.gif); background-repeat: no-repeat; background-size: cover; ">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Doctors">Doctors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Nurses">Nurses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="CNAs">CNAs</a>
                    </li>


                </ul>
            </div>
        </div>
    </nav>
    <div class="table-responsive">
        <input class="form-control" id="myInput" type="text" placeholder="Search..">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Nurse Name
                    </th>
                    <th>
                        Department
                    </th>
                    <th>
                        Doctor Assigned
                    </th>
                    <th></th>
                    <th>Edit</th>
                    <th>View</th>
                    <th>Fire</th>


                </tr>
            </thead>
            <tbody id="NursesTable">

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department)
                        </td>
                        <td>
                            @Html.DisplayFor(ModelItem => item.Assigned.Doctor_Name)
                        </td>

                        <td>

                        <td class="text-center">
                            <a asp-action="Nurses_Edit" class="btn btn-primary" asp-route-id="@item.ID">Change</a>
                        </td>
                        <td class="text-center">
                            <a asp-action="Nurses_Details" class="btn btn-dark" asp-route-docid="@item.ID">View Details</a>
                        </td>
                        <td class="text-center">
                            <a asp-action="NursesFire" class="btn btn-warning" asp-route-id="@item.ID">Fire</a>
                        </td>
                    </tr>
                }




            </tbody>
        </table>

        <script>
            $(document).ready(function () {
                $("#myInput").on("keyup", function () {
                    var value = $(this).val().toLowerCase();
                    $("#NursesTable tr").filter(function () {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>
    </div>
</body>